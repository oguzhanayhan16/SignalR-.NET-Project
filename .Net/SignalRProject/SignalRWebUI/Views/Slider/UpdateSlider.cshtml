@model UpdateSliderDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<input type="hidden" asp-for="SliderID" />
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan Ekleyiniz </div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title1">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Title1" id="title1" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="title2">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Title2" id="title2" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="title3">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Title3" id="title3" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="description">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Description1" id="description" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="description2">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Description2" id="description2" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="description3">Kategori Adını Griniz</label>
								<input type="text" class="form-control" asp-for="Description3" id="description3" placeholder="Enter Category">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Öne çıkan ekle </button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
