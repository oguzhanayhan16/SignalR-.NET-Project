@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Adını Griniz</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="productprice">Ürün Fiyatı Griniz</label>
								<input type="text" class="form-control" asp-for="Price" id="productprice" placeholder="Enter Category">
							</div>
							<div class="form-group">
								<label for="imageUrl">Ürün Adını Griniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Enter Category">
							</div>

							<div class="form-group">
								<label for="imageUrl">Ürün Kategorisini Seçiniz </label>
							
								@Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>) ViewBag.v,new {@class="form-control"})

							</div>
							<div class="form-group">
								<label for="description">Ürün Açıklamasını Griniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description" placeholder="Enter Category">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

